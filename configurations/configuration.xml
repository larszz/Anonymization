<!--new configuration structure to make more detailed configuration possible-->
<configuration>
	<inputdirectory>D:\Projects\Anonymization\Datenschutz-IAM</inputdirectory>
	<outputdirectory>D:\Projects\Anonymization\OUTPUT</outputdirectory>
	<table tablename="HR.csv">
		<columns_pseudonym>
			<column readable="true">
				<name>EmployeeNr</name>
			</column>
		</columns_pseudonym>
	</table>
	<table tablename="AD_orig.csv">
		<columns_anonym>
			<column>
				<name>sAMAccountName</name>
				<pattern>
					<front>2</front>
					<end>2</end>
				</pattern>
			</column>
			<column delete="true">
				<name>givenName</name>
			</column>
			<column>
				<name>lastLogon</name>
				<pattern>
					<end>4</end>
				</pattern>
			</column>
		</columns_anonym>
		<columns_pseudonym>
			<column id="1">
				<name>EmployeeNr</name>
				<link>
					<link_table>HR.csv</link_table>
					<link_field>EmployeeNr</link_field>
				</link>
			</column>
			<column id="2">
				<name>location</name>
				<name>memberof</name>
				<newfieldname>CombinedField</newfieldname>
			</column>
			<column readable="false">
				<name>accountType</name>
			</column>
		</columns_pseudonym>
		<ignore_in_tests>
			<column>EmployeeNr</column>
		</ignore_in_tests>

	</table>

</configuration>
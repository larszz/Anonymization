<!--new configuration structure to make more detailed configuration possible-->
<configuration>
    <directory>[DIRECTORY-PATH]</directory>
    <outputdirectory>[OUTPUT-DIRECTORY-PATH]</outputdirectory>
    <table tablename="table1">
        <columnss_anonym>
            <column>
                <name>column1</name>
                <pattern chars_between="3">
                    <front>2</front>
                    <end>2</end>
                </pattern>
            </column>
            <column>
                <name>column2</name>
            </column>
        </columnss_anonym>
        <columns_pseudonym>
            <column>
                <name>column3</name>
                <linking>
                    <tablename>Org.csv</tablename>
                    <fieldname>EmployeeNumber</fieldname>
                </linking>
            </column>
            <column>
                <name>column4</name>
                <name>column5</name>
                <newfield>CombinedField</newfield>
            </column>
            <column readable="true">
                <name>column6</name>
            </column>
        </columns_pseudonym>
        >

    </table>

</configuration>
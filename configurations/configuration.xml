<!--new configuration structure to make more detailed configuration possible-->
<configuration>
	<inputdirectory>[DIRECTORY-PATH]</inputdirectory>
	<outputdirectory>[OUTPUT-DIRECTORY-PATH]</outputdirectory>
	<table tablename="table1">
		<columns_anonym>
			<column>
				<name>column1</name>
				<pattern chars_between="3">
					<front>2</front>
					<end>2</end>
				</pattern>
			</column>
			<column>
				<name>column2</name>
			</column>
		</columns_anonym>
		<columns_pseudonym>
			<column>
				<name>column3</name>
				<link>
					<tablename>Org.csv</tablename>
					<fieldname>EmployeeNumber</fieldname>
				</link>
			</column>
			<column>
				<name>column4</name>
				<name>column5</name>
				<newfield>CombinedField</newfield>
			</column>
			<column readable="true">
				<name>column6</name>
			</column>
		</columns_pseudonym>

	</table>

